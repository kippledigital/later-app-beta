{
  "name": "later-backend",
  "version": "1.0.0",
  "description": "Backend services for the Later app using Supabase",
  "main": "index.js",
  "scripts": {
    "dev": "supabase start",
    "stop": "supabase stop",
    "reset": "supabase db reset",
    "generate-types": "supabase gen types typescript --local > types/database.types.ts",
    "deploy": "supabase functions deploy",
    "edge-dev": "supabase functions serve",
    "migrate": "supabase db push",
    "seed": "supabase db seed",

    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance --testTimeout=120000",
    "test:security": "jest tests/security",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",

    "test:setup": "npm run test:db:setup && npm run test:seed",
    "test:db:setup": "supabase start && supabase db reset",
    "test:seed": "node tests/scripts/seed-test-data.js",
    "test:teardown": "supabase stop",

    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "openai": "^4.20.1",
    "cheerio": "^1.0.0-rc.12",
    "node-fetch": "^3.3.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^4.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.0",
    "supabase": "^1.123.4",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "msw": "^2.0.8"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/config/jest.setup.ts"],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "supabase/functions/**/*.ts",
      "api/**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000,
    "maxWorkers": "50%"
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/prefer-const": "error"
    }
  },
  "keywords": [
    "supabase",
    "backend",
    "content-management",
    "ai",
    "mobile-first",
    "testing",
    "jest"
  ],
  "author": "Later Team",
  "license": "MIT"
}